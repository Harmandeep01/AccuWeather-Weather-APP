<!doctype html>
<html lang="en">
  {{>headerLinks}}
  <body>
  {{>navbar}}
    <!-- main-header -->
    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12 main-header-left">
                        <p>Welcome to weather APP!</p>
                        <h1>Get the lates <span class="text-span">weather</span> information</h1>
                         <a href="weather"><button>Check Weather</button></a>

                        <!-- main-header-left  -->
                    </div>
                    <div class="col-md-6 col-12 main-header-right">
                        <!-- main-header-right -->
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner-autoplay">
                              <div class="carousel-item active">
                                <img src="images/carousel1.png" class="d-block w-100" alt="...">
                              </div>
                              <div class="carousel-item">
                                <img src="images/carousel2.png" class="d-block w-100" alt="...">
                              </div>
                              <div class="carousel-item">
                                <img src="images/carousel3.png" class="d-block w-100" alt="...">
                              </div>
                            </div>
